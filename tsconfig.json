{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es6",
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    // "allowJs": true, js가 있어도 type 에러X
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
  ]
  // 근데 왜 tsconfig는 주석이 되는데 왜 package.json은 주석이 안되는거지???
}
